@startuml
'https://plantuml.com/class-diagram
'https://plantuml.com/es/commons
'https://plantuml.com/es/creole
'https://plantuml.com/es/object-diagram

' Title Diagrama E/R [Recetario]

'Estilo generico tabla
<style>
    object {
        BackgroundColor #F2F2F2
        BorderColor #000000
        FontColor #000000
        FontSize 14
        FontName Arial
        FontStyle normal
        RoundCorner 5
        Shadowing false

        header{
            BackgroundColor #FEEDCE
        }

        headerReceta {
            header{
                BackgroundColor #FEEDCE
                FontColor black
                FontStyle bold
            }
        }

        headerIngredientes {
            header{
                BackgroundColor #23D75F
                FontColor black
                FontStyle bold
            }
        }

        headerPasos {
            header{
                BackgroundColor #1E1EDC
                FontColor white
                FontStyle bold
            }
        }
    }

    arrow {
        LineColor #16417C
        FontColor #0A72F0
    }
</style>

'Entidades
hide <<headerReceta>> stereotype
object "RECETAS" as RE <<headerReceta>> {
    <#transparent,#transparent>|INTEGER      | idReceta|    <&key>|
    |TEXT| titulo|
    |TEXT| descripcion|
    |TEXT| imagen|
    |INTEGER| tiempo|
}

hide <<headerIngredientes>> stereotype
object "INGREDIENTES" as IN <<headerIngredientes>> {
    <#transparent,#transparent>|INTEGER      | idIngrediente|    <&key>|
    |TEXT| nombre|
    |REAL| cantidad|
    |TEXT| unidad|
    |INTEGER| idReceta_fk|    FK|
}

hide <<headerPasos>> stereotype
object "PASOS" as PA <<headerPasos>>{
    <#transparent,#transparent>|INTEGER      | idPaso|    <&key>|
    |INTEGER| orden|
    |TEXT| descripcion|
    |INTEGER| idReceta_fk|    FK|
}

'Relaciones
RE "   1" *-right- "   N"   IN : "   tiene    "
RE "1  " *--      "N  " PA : "  contiene"

@enduml