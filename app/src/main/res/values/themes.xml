<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
       AppBaseTheme
       Es el tema base de la aplicación.
       Aquí se definen los colores y configuraciones generales que afectarán a toda la app.
    -->
    <style name="AppBaseTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores principales de la aplicación -->
        <item name="colorPrimary">@color/blue_500
        </item>                <!-- Color principal (barras, botones primarios, etc.) -->
        <item name="colorPrimaryDark">@color/blue_200
        </item>           <!-- Color de la status bar en versiones antiguas -->
        <item name="colorAccent">@color/blue_200
        </item>                <!-- Color de controles interactivos (botones, edittexts) -->
        <item name="colorPrimaryVariant">@color/blue_700
        </item>        <!-- Variante del primario (usado en status bar en M3) -->

        <!-- Colores secundarios para elementos destacados -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>

        <!-- Colores para textos según el fondo donde estén -->
        <item name="colorOnPrimary">@color/white
        </item>                <!-- Texto cuando el fondo es colorPrimary -->
        <item name="colorOnSecondary">@color/white
        </item>              <!-- Texto cuando el fondo es colorSecondary -->

        <!-- Texto sobre contenedores primarios -->
        <item name="colorOnPrimaryContainer">@color/blue_50</item>

        <!-- Configuración de la barra de estado y fondo base de ventanas -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowBackground">@color/white</item>

        <!-- Estilos base para Toolbar y textos dentro de ella -->
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
        <item name="android:colorControlNormal">?attr/colorOnPrimary</item>
        <item name="android:textColorPrimaryInverse">?attr/colorSecondary</item>
    </style>

    <!--
       Theme.RecetasDigitales
       Tema principal de la aplicación, que hereda el AppBaseTheme.
       Aquí se añaden ajustes específicos como estilos para la ActionBar.
    -->
    <style name="Theme.RecetasDigitales" parent="AppBaseTheme">
        <item name="actionBarStyle">@style/ActionBar
        </item>                        <!-- Estilo para la barra superior -->
        <item name="android:actionOverflowButtonStyle">@style/OverflowButton
        </item> <!-- Estilo para el botón de menú "tres puntos" -->
    </style>

    <!--
       Tema aplicado para SearchView (cuando se usa en la ActionBar).
       Ajusta colores de iconos y texto en el campo de búsqueda.
    -->
    <style name="ThemeOverlay.SearchView.DarkIcons" parent="ThemeOverlay.Material3.Light">
        <item name="android:colorControlNormal">@color/gray_700</item>
        <item name="android:textColorPrimary">@color/gray_800</item>
        <item name="android:textColorHint">@color/gray_400</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!--
       Tema para diálogos tipo BottomSheet.
       Aplica un estilo propio en lugar del predeterminado.
    -->
    <style name="ThemeBottomSheet" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/EstiloBottomSheet</item>
    </style>

    <!-- Tema igual que el principal pero sin ActionBar -->
    <style name="Theme.RecetasDigitales.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Overlays para compatibilidad con AppCompat -->
    <style name="Theme.RecetasDigitales.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RecetasDigitales.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
