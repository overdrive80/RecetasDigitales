<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppBaseTheme" parent="Theme.Material3.DayNight.NoActionBar">

        <!--  Colores principales de la aplicación  -->
        <item name="colorPrimary">@color/blue_500</item>
        <!--  Color primario utilizado en la interfaz  -->
        <item name="colorPrimaryDark">@color/blue_200</item>
        <!--  Color más oscuro del primario, usado en elementos como la barra de estado  -->
        <item name="colorAccent">@color/blue_200</item>
        <!--  Color de acento utilizado en elementos resaltados  -->
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <!--  Variantes del color primario, usadas en temas y componentes  -->
        <!--  Colores secundarios  -->
        <item name="colorSecondary">@color/teal_200</item>
        <!--  Color secundario utilizado en la interfaz  -->
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <!--  Color del texto sobre fondos secundarios  -->
        <!--  Configuración de la statusbar y fondo de la ventana  -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!--  Color de la barra de estado  -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowBackground">@color/white</item>

        <item name="android:textColorPrimaryInverse">?attr/colorSecondary</item>
        <item name="rippleColor">@color/blue_50</item>

    </style>

    <style name="Theme.RecetasDigitales" parent="AppBaseTheme">
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowButton</item>
    </style>

    <style name="ThemeOverlay.SearchView.DarkIcons" parent="ThemeOverlay.Material3.Light">
        <item name="android:colorControlNormal">@color/gray_700</item>
        <item name="android:textColorPrimary">@color/gray_800</item>
        <item name="android:textColorHint">@color/gray_400</item>
        <item name="android:elevation">0dp</item>
    </style>


    <!--
    Redefinimos los atributos clave de color (colorPrimary) DENTRO del tema
    del BottomSheet para que los botones y otros widgets usen el color correcto.
-->
    <style name="ThemeBottomSheet" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/EstiloBottomSheet</item>

        <item name="colorPrimary">@color/blue_800</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.RecetasDigitales.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RecetasDigitales.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RecetasDigitales.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
